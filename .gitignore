#include <stdio.h>

int main() {

  char operator;
  double a, b ;
  printf("Enter an operator (+, -, *, /): ");
  scanf("%c", &operator);
  
  printf("Enter the value of A and B: ");
  scanf("%lf %lf", &a, &b);

  switch (operator) {
    case '+':
      printf("%.1lf + %.1lf = %.1lf", a, b, a+b);
      break;
      
    case '-':
      printf("%.1lf - %.1lf = %.1lf", a,b,a-b);
      break;
      
    case '*':
      printf("%.1lf * %.1lf = %.1lf", a,b,a*b);
      break;
      
    case '/':
      printf("%.1lf / %.1lf = %.1lf", a,b,a/b);
      break;
      
    default:
      printf("ENTER VALID OPERATOR");
  }
    
    return(0);
    
}
